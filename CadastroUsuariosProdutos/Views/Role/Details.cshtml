@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{               
    ViewBag.Title = "Detalhes";
}

<div class="panel panel-warning">
    <div class="panel-heading">
        <h3 class="box-title">
            <b>Perfil: @Html.DisplayFor(model => model.Name)</b>
        </h3>
    </div>
    <div class="panel-body">
        <table class="table table-hover table-bordered table-condensed" id="tabela1">
            <thead>
                <tr>
                    <h4><b>Usuário(s) cadastrado(s):</b></h4>
                </tr>
            </thead>
            @foreach (var item in ViewBag.Users)
            {
                <tr>
                    <td><h5>@item.UserName</h5></td>

                </tr>                
            }
                <tr>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Voltar para a lista", "Index", new { }, new { @class = "btn btn-warning" })
                    </td>
                </tr>
        </table>
    </div>
    <div class="panel-footer">
        <p class="box-title">
            <b> Total de usuários nesse perfil:  </b><span class="label label-primary">@ViewBag.UserCount</span>
        </p>
    </div>
</div>

@section scripts{
    <script>
        $(function () {
            $("#tabela1").DataTable();
        });
    </script>
}

