@model IEnumerable<CadastroUsuariosProdutos.Models.ApplicationUser>
@{           

                ViewBag.Title = "Usuários cadastrados";
}

<div class="panel panel-warning">
    <div class="panel-heading">
        <h3 class="box-title">
            <b>Usuários</b>
        </h3>
    </div>
    <p style="padding: 10px;">
        @Html.ActionLink("Criar Novo", "Create", new { }, new { @class = "btn btn-success" })
    </p>

    <div class="panel-body">
        <table class="table table-hover table-bordered table-condensed" id="tabela1">
            <thead>
                <tr>
                    <td><b>Usuário(s)</b></td>
                    <td><b>Perfil(s)</b></td>
                    <td><b>Opções</b></td>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.UserName)</td>    
            <td>@ViewBag.RolesUsers</td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Deletar", "Delete", new { id = item.Id }, new { @class = "btn btn-warning" })
            </td>
        </tr>
            }
        </table>
    </div>
        <div class="panel-footer">
            <p class="box-title">
                <b> Total de usuários:  </b><span class="label label-primary">@Model.Count()</span>
            </p>
        </div>
 </div>

@section scripts{
        <script>
        $(function () {
            $("#tabela1").DataTable();
        });
        </script>
}
                    


